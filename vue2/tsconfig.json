{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "node",
      "vite/client",
      "vue"
    ],
    "baseUrl": ".",
    // 这里需要配置
    "paths": {
      "@/*": [
        "src/*"
      ]
      // 这里需要配置
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "ScriptHost",
      "es2015.proxy"
    ]
  },
  "include": [
    "src/types/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "mock",
    "build",
    "dist"
  ],
  "vueCompilerOptions": {
    "extensions": [
      //      ".vue",
      //      ".ts",
      //      ".js",
      //      ".tsx",
      //      ".json",
      //      "vue",
      //      "*.vue",
      //      "ts"
    ],
    "target": 2.7
  }
}
